#!/bin/sh
top=$(cd "$(dirname "${BASH_SOURCE[0]}")" ; pwd -P)

cd "$top/.."

set -x

# Run all examples
# TODO: limit should be based on framess (--frames)
./build/examples/colored/colored resources/meshes/nefertiti.obj --limit 1e3
./build/examples/normals/normals resources/meshes/nefertiti.obj --limit 1e3
./build/examples/palette/palette resources/meshes/nefertiti.obj --limit 1e3
./build/examples/particles/particles --limit 1e3
./build/examples/compute/compute --limit 1e3
./build/examples/ngf/ngf resources/meshes/armadillo-ngf.bin --frames 120